<div style="border: 10px solid #F6D7E0; ">
    <div class="container" style="margin-top:30px; margin-bottom: 30px">
        <form action="/update/<%= @one_post.id%>" method="post">
          <div class="form-group">
            <label for="exampleInputTitle1">제목</label>
            <input type="text" class="form-control" id="exampleInputTitle1" name="title" value="<%= @one_post.title %>">
          </div>
          <div class="form-group">
            <label for="content">내용</label>
            <textarea class="form-control" id="content" name="content" rows="3" value="content"><%= @one_post.content %></textarea>
          </div>
          <button type="submit" >수정하기</button>
          <br>
        </form>
    </div>
</div>